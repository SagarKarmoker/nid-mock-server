{
  "name": "nid-mock-server",
  "version": "1.0.0",
  "description": "TypeScript Express backend with Morgan and CORS",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "npm run swagger:generate && ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:watch": "concurrently \"npm run swagger:watch\" \"ts-node-dev --respawn --transpile-only src/index.ts\"",
    "clean": "rimraf dist",
    "prebuild": "npm run clean && npm run swagger:generate",
    "swagger": "ts-node swagger.ts",
    "swagger:generate": "ts-node swagger.ts",
    "swagger:watch": "nodemon --watch src --ext ts --exec \"npm run swagger:generate\""
  },
  "keywords": [
    "typescript",
    "express",
    "backend",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
